page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
  height: 300rpx;
}
.detail.title_desc{
  margin: 20rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.separate .price {
  color: red;
  font-size: 40rpx;
  margin: 20rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #4caf50; /* Green */
}
.button-red {
  background-color: #f44336; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
swiper {
  width: 100%;
}
.goods_title {
  font-size: 14px;
  line-height: 20px;
  color: #535353;
  padding: 10px;
  height: 40px;
  padding-right: 80px;
  position: relative;
}
.goods_infor_top {
  background-color: #FFF;
}
.goods_price {
  padding: 10px;
  font-size: 16px;
  color: #FF0000;
}
.goods_old_price {
  margin-left: 10px;
  font-size: 12px;
  text-decoration: line-through;
  color: #535353;
}
.goods_deliver {
  padding: 10px;
  border-top: 1px solid #E5E5E5;
  font-size: 10px;
  color: #676767;
}
.bottom-nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;

}
.bottom-nav .size{
  font-size:10px;
}
.bottom-nav .iconfont
{
  font-size:25px;
}

.bottom-nav .nav-icon
{
  background-color:#eeeeee;
  flex: 0.5;
  text-align: center;
}

.bottom-nav .nav-addcart {
  
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  background-color: orange;
  color: #fff;
}

.bottom-nav .nav-buynow {
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  background-color: #ffcc00;
  color: #fff;

}
.bottom-nav .nav-buynow .price{
  margin-top: 10px;
  font-size: 15px;
  color: red;
}
.shop_size{
  font-size: 20px;
  color: red;
}
